pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-crendentails-vgs')
        AWS_SECRET_ACCESS_KEY = credentials('aws-crendentails-vgs')
        TF_VERSION            = '1.9.7'
    }

    stages {

        stage('Clone Repo') {
            steps {
                deleteDir()
                git branch: 'main',
                    url: 'https://github.com/MUTHURAJA25/infra_mxk.git'
                sh "ls -lart"
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Validate') {
            steps {
                sh 'terraform validate'
            }
        }

        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }
}

